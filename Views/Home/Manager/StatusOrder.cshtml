@model List<moon.Models.Order>
@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Trạng thái đơn hàng";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Danh sách đơn hàng</h1>
        <a href="/Product/Add" class="btn btn-primary">
            <i class="fas fa-save"></i> Lưu
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Bảng hóa đơn:</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ giao hàng</th>
                            <th>Ngày đặt hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái đơn hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.FullName</td>
                                <td>@order.PhoneNumber</td>
                                <td>@order.Province, @order.District, @order.Ward</td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@order.TotalAmount</td>
                                <td>
                                    <select class="form-control">
                                        <option selected>@order.Status</option>
                                        <option>Đang xử lý</option>
                                        <option>Đang giao hàng</option>
                                        <option>Thành công</option>
                                        <option>Đã huỷ</option>
                                    </select>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
