@model moon.Models.Product

@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container-fluid py-4">
    <a asp-controller="Manager" asp-action="Product" class="btn btn-secondary mb-3">
        ← Quay lại danh sách
    </a>

    <div class="card shadow">
        <div class="row no-gutters">
            <div class="col-md-5 p-3 text-center">
                @if (Model.ImageUrls != null && Model.ImageUrls.Count > 0)
                {
                    <img src="@Model.ImageUrls.First()" class="img-fluid rounded" style="max-height: 300px;" alt="Hình ảnh sản phẩm" />
                }
                else
                {
                    <p class="text-muted">Không có hình ảnh</p>
                }
            </div>
            <div class="col-md-7 p-4">
                <h3 class="text-primary">@Model.Name</h3>
                <p class="mb-2"><strong>Mã sản phẩm:</strong> @Model.Id</p>
                <p><strong>Loại sản phẩm:</strong> @Model.Category?.Name</p>
                <p><strong>Giá bán:</strong> @String.Format("{0:N0}₫", Model.Price)</p>
                <p><strong>Số lượng trong kho:</strong> @Model.StockQuantity</p>
                <hr />
                <p><strong>Mô tả sản phẩm:</strong></p>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>
