@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Thống kê";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Biểu đồ doanh thu</h1>
    <br>

    <!-- Content Row -->
    <div class="row">

        <!-- Bar Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Biểu đồ cột</h6>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="myBarChart"></canvas>
                    </div>
                    <hr>
                    Biểu đồ cột doanh thu.
                </div>
            </div>
        </div>

        <!-- Donut Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Biểu đồ tròn</h6>
                </div>
                <div class="card-body">
                    <div class="chart-donut">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <hr>
                    Biểu đồ tỉ lệ loại sản phẩm.
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Style chỉnh layout -->
<style>
    .chart-container {
        position: relative;
        margin: auto;
        height: 350px;
        width: 100%;
    }

    .chart-donut {
        position: relative;
        margin: auto;
        height: 300px;
        width: 300px;
    }

    canvas {
        display: block;
        margin: auto;
    }

    .card-body {
        text-align: center;
    }
</style>

<!-- Script Chart.js -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Dữ liệu từ ViewBag
        const monthLabels = @Html.Raw(Json.Serialize(ViewBag.MonthLabels));
        const monthRevenue = @Html.Raw(Json.Serialize(ViewBag.MonthRevenue));
        const productLabels = @Html.Raw(Json.Serialize(ViewBag.ProductLabels));
        const productCounts = @Html.Raw(Json.Serialize(ViewBag.ProductQuantities));

        // Bar Chart
        const ctxBar = document.getElementById("myBarChart").getContext("2d");
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: monthRevenue,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top'
                    },
                    title: {
                        display: true,
                        text: 'Biểu đồ doanh thu theo tháng'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function (value) {
                                return value.toLocaleString() + ' VNĐ';
                            }
                        }
                    }
                }
            }
        });

        // Donut Chart
        const ctxPie = document.getElementById("myPieChart").getContext("2d");
        new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: productLabels,
                datasets: [{
                    data: productCounts,
                    backgroundColor: [
                        '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                        '#858796', '#5a5c69', '#20c9a6', '#ff6f61', '#8e44ad'
                    ],
                    hoverBackgroundColor: [
                        '#2e59d9', '#17a673', '#2c9faf', '#dda20a', '#be2617',
                        '#6c757d', '#343a40', '#1abc9c', '#ff4f41', '#732d91'
                    ],
                    hoverBorderColor: "rgba(234, 236, 244, 1)"
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    title: {
                        display: true,
                        text: 'Tỉ lệ các loại sản phẩm'
                    }
                },
                cutout: '65%'
            }
        });
    });
</script>
