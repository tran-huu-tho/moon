@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Trang chủ";
}

<style>
    /* Video nền */
    .card-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
}

.video-overlay-content {
    position: relative;
    z-index: 1;
    padding: 20px;
    text-align: center;
}

.digital-clock {
    z-index: 1;
    color: #fff;
    text-shadow: 0 0 10px #00fff7, 0 0 20px #00c6ff;
    font-family: 'Orbitron', sans-serif;
    animation: fadeIn 1s ease-in;
}

.digital-clock .time {
    font-size: 2.8rem;
    font-weight: bold;
    margin-bottom: 10px;
}

.digital-clock .date {
    font-size: 1.2rem;
    letter-spacing: 1px;
}

.glow-text {
    animation: glow 2s ease-in-out infinite alternate;
}

.card-body::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 70%);
    animation: rotateLight 5s linear infinite;
    z-index: 0;
}
</style>

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&display=swap" rel="stylesheet">




<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <!-- <img src="/images/moon.gif" style="height: 40px;" alt="moon">
        <img src="/images/moon.gif" style="height: 40px;" alt="moon">
        <img src="/images/moon.gif" style="height: 40px;" alt="moon"> -->
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Đơn hàng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalOrders</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                               Doanh số</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @String.Format("{0:N0} VNĐ", ViewBag.TotalRevenue)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

                <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Bán chạy nhất</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.BestSellerName - @ViewBag.BestSellerSold lượt bán
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Sản phẩm</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box-open fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
       
        
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4" style="border-radius: 19px;">
                <div class="card-body p-0" style="position: relative; height: 300px; overflow: hidden;">
                    <video autoplay muted loop class="card-video" style="border-radius: 19px;">
                        <source src="/video/demo1.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4" style="border-radius: 19px; overflow: hidden; background: linear-gradient(145deg, #0f2027, #203a43, #fcb045);">
                <div class="card-body d-flex justify-content-center align-items-center p-0" style="height: 300px; position: relative;">
                    <div id="digital-clock" class="digital-clock text-center">
                        <div id="clock-time" class="glow-text time">00:00:00</div>
                        <div id="clock-date" class="glow-text date">dd/mm/yyyy</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4" style="border-radius: 19px;">
                <div class="card-body p-0" style="position: relative; height: 300px; overflow: hidden;">
                    <video autoplay muted loop class="card-video" style="border-radius: 19px;">
                        <source src="/video/demo2.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function updateDigitalClock() {
    const now = new Date();
    const hours = now.getHours().toString().padStart(2, "0");
    const minutes = now.getMinutes().toString().padStart(2, "0");
    const seconds = now.getSeconds().toString().padStart(2, "0");

    const day = now.getDate().toString().padStart(2, "0");
    const month = (now.getMonth() + 1).toString().padStart(2, "0");
    const year = now.getFullYear();

    document.getElementById("clock-time").textContent = `${hours}:${minutes}:${seconds}`;
    document.getElementById("clock-date").textContent = `${day}/${month}/${year}`;
}

setInterval(updateDigitalClock, 1000);
updateDigitalClock();
</script>
