@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container-fluid py-2">
    <a asp-controller="Manager" asp-action="Product" class="btn btn-secondary d-inline-flex align-items-center" style="border-radius: 9px; gap: 6px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 0 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 7.5H14.5A.5.5 0 0 1 15 8z" />
                </svg>
                Trở về
            </a>
    <div class="row justify-content-center">
        <div class="col-lg-8" style="margin-bottom:50px;">
        
            <div class="card shadow-lg rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h6 class="mb-0">Thêm sản phẩm mới</h6>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="Name">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Nhập tên sản phẩm" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Description">Mô tả</label>
                            <textarea class="form-control" id="Description" name="Description" rows="4" placeholder="Nhập mô tả chi tiết"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Price">Giá bán</label>
                            <input type="number" class="form-control" id="Price" name="Price" step="0.01" placeholder="VD: 199000" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="StockQuantity">Số lượng trong kho</label>
                            <input type="number" class="form-control" id="StockQuantity" name="StockQuantity" placeholder="VD: 10" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="CategoryId">Loại sản phẩm</label>
                            <select class="form-control" id="CategoryId" name="CategoryId">
                                <option value="">-- Chọn loại sản phẩm --</option>
                                <option value="1">Áo khoác</option>
                                <option value="2">Móc khóa</option>
                                <option value="3">Phụ kiện</option>
                            </select>
                        </div>

                        <div class="form-group mb-4">
                            <label for="Image" class="form-label">Hình ảnh</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="Image" name="Image" onchange="previewImage(event)">
                                <label class="custom-file-label" for="Image">Chọn hình ảnh...</label>
                            </div>
                            <div class="mt-3 text-center">
                                <img id="preview" src="#" alt="Xem trước hình ảnh" class="img-thumbnail d-none" style="max-height: 200px;" />
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-5">Lưu sản phẩm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



