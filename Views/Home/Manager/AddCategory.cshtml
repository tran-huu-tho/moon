@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Thêm loại sản phẩm";
}

<div class="container-fluid py-2">
    <a asp-controller="Manager" asp-action="Category" class="btn btn-secondary d-inline-flex align-items-center" style="border-radius: 9px; gap: 6px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 0 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 7.5H14.5A.5.5 0 0 1 15 8z" />
        </svg>
        Trở về
    </a>

    <div class="row justify-content-center">
        <div class="col-lg-6" style="margin-bottom:50px;">
            <div class="card shadow-lg rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h6 class="mb-0">Thêm loại sản phẩm</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="CategoryName">Tên loại sản phẩm</label>
                            <input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="Nhập tên loại sản phẩm" required />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-5">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
