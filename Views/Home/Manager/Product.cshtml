@model List<moon.Models.Product>

@{
    Layout = "~/Views/Shared/Manager.cshtml";
    ViewData["Title"] = "Sản phẩm";
}

<div class="container-fluid">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Danh sách sản phẩm</h1>
        <a asp-controller="Manager" asp-action="AddProduct" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng sản phẩm:</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Mô tả</th>
                            <th>Loại</th>
                            <th>Số lượng kho</th>
                            <th>Giá</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td style="max-width: 250px; overflow-wrap: break-word; word-break: break-word;">
                                    @((item.Description?.Length > 300) ? item.Description.Substring(0, 300) + "..." : item.Description)
                                </td>
                                <td>@(item.Category?.Name ?? "Không rõ")</td>
                                <td>@item.StockQuantity</td>
                                <td>@item.Price.ToString("N0") đ</td>
                                <td>
                                    <a asp-controller="Manager" asp-action="ViewProductDetail" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-success btn-sm" asp-action="EditProduct" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger btn-sm" asp-action="DeleteProduct" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
