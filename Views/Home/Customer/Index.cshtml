@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["Title"] = "Trang chủ";
}

    <div class="site-blocks-cover" data-aos="fade">
      <div class="container">
        <div class="row">
          <div class="col-md-6 ml-auto order-md-2 align-self-start">
            <div class="site-block-cover-content">
            <h2 class="sub-title">#Chào mừng bạn đến với Moon - Kawaii có chiến lược.#</h2>
            <h1 style="font-family: 'Poppins', sans-serif; font-size: 35px">Shine in Your Own Light.</h1>
            <p><a href="#" onclick="scrollDown()" class="btn btn-black rounded-0">Mua ngay</a></p>
            </div>
          </div>
          <div class="col-md-6 order-1 align-self-end">
            <img src="images/thumnail_main.png" alt="Image" class="img-fluid">
          </div>
        </div>
      </div>
    </div>

    <script>
  function scrollDown() {
    window.scrollBy({
      top: window.innerHeight,
      behavior: 'smooth'
    });
  }
  </script>



@{
    var popularList = ViewBag.Popular as List<moon.Models.Product>;
}
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="title-section text-center mb-5 col-12">
                <h2 style="font-family: 'Segoe UI', sans-serif;">SẢN PHẨM NỔI BẬT</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 block-3">
                <div class="nonloop-block-3 owl-carousel">
                    @if (popularList != null)
                    {
                        foreach (var item in popularList)
                        {
                            <div class="item">
                                <div class="item-entry">
                                    <a href="/Products/Details/@item.Id" class="product-item md-height bg-gray d-block">
                                        <img src="@item.ImageUrls.FirstOrDefault()" alt="@item.Name" class="img-fluid" />
                                    </a>
                                    <h2 class="item-title">
                                        <a href="/Products/Details/@item.Id">@item.Name</a>
                                    </h2>
                                    <strong class="item-price">@item.Price.ToString("N0") đ</strong>
                                    <div class="star-rating">
                                        <span class="icon-star2 text-warning"></span>
                                        <span class="icon-star2 text-warning"></span>
                                        <span class="icon-star2 text-warning"></span>
                                        <span class="icon-star2 text-warning"></span>
                                        <span class="icon-star2 text-warning"></span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>




@{
    var explore = ViewBag.Explore as IEnumerable<dynamic>;

    var aoThun = explore?.FirstOrDefault(x => x.Name.ToString().Trim().ToLower() == "áo thun");
    var mocKhoa = explore?.FirstOrDefault(x => x.Name.ToString().Trim().ToLower() == "móc khóa");
    var padChuot = explore?.FirstOrDefault(x => x.Name.ToString().Trim().ToLower() == "lót chuột");
}

<div class="site-section">
  <div class="container">
    <div class="title-section mb-5">
      <h2 style="font-family: 'Segoe UI', sans-serif;">KHÁM PHÁ</h2>
    </div>
    <div class="row align-items-stretch">
      <div class="col-lg-8">
        <div class="product-item sm-height full-height bg-gray">
          <a href="/Products?categoryId=@aoThun?.Id" class="product-category">
              Áo thun <span><br>@(aoThun?.Count ?? 0) sản phẩm</span>
          </a>
          <img src="~/images/aokhoac.jpg" alt="Image" class="img-fluid">
        </div>
      </div>
      <div class="col-lg-4">
        <div class="product-item sm-height bg-gray mb-4">
          <a href="/Products?categoryId=@mocKhoa?.Id" class="product-category">
              Móc khóa <span><br>@(mocKhoa?.Count ?? 0) sản phẩm</span>
          </a>
          <img src="~/images/mockhoa.jpg" alt="Image" class="img-fluid">
        </div>
        <div class="product-item sm-height bg-gray">
          <a href="/Products?categoryId=@padChuot?.Id" class="product-category">
              Pad chuột <span><br>@(padChuot?.Count ?? 0) sản phẩm</span>
          </a>
          <img src="~/images/padchuot.jpg" alt="Image" class="img-fluid">
        </div>
      </div>
    </div>
  </div>
</div>











