@model List<moon.Models.Order>

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["Title"] = "Đơn hàng";
}

<div class="container pt-5">
    <h1></h1>
    <h3 class="mb-4 text-center">Theo dõi đơn hàng</h3>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td> @order.Id</td>
                <td> @order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @{
                        string status = order.Status?.Trim().ToLower();
                        string badgeClass = status switch
                        {
                            "chờ xác nhận" => "badge-secondary",
                            "đang xử lý" => "badge-warning",
                            "đang giao" => "badge-info",       // sửa lại thành xanh biển
                            "thành công" => "badge-success",
                            "đã hủy" => "badge-primary",       // đảm bảo dùng màu đỏ
                            _ => "badge-primary"
                        };
                    }
                    <span class="badge @badgeClass text-uppercase">@order.Status</span>
                </td>
                <td>
                    @foreach (var item in order.Items)
                    {
                        <text>@item.ProductName x @item.Quantity<br /></text>
                    }
                </td>
                <td>@order.TotalAmount.ToString("#,##0") VNĐ</td>
            </tr>
        }
        </tbody>
    </table>
</div>