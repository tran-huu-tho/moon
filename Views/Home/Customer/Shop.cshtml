@model IEnumerable<moon.Models.Product>

@{
  Layout = "~/Views/Shared/Layout.cshtml";
  ViewData["Title"] = "Cửa hàng";
}
<style>
  .product-item {
    position: relative;
    width: 100%;
    padding-top: 100%;
    /* Vuông hình */
    background-size: cover;
    background-position: center;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .product-item:hover {
    transform: scale(1.02);
  }

  .product-overlay {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: rgba(255, 255, 255, 0.712);
    color: black;
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
  }

  .item-title {
    font-size: 18px;
    margin: 0;
  }

  .item-price {
    font-size: 16px;
    display: block;
  }
</style>

<div class="custom-border-bottom py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0">
        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
        <span class="mx-2 mb-0">/</span>
        <strong class="text-black">Cửa hàng</strong>
      </div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container">
    <div class="row mb-5">
      <div class="col-md-9 order-1">

        <div class="row align">
          <div class="col-md-12 mb-5">
            <div class="float-md-left">
              <@if (!string.IsNullOrEmpty(ViewBag.SearchQuery)) {
              <text>Kết quả tìm kiếm cho:
                "@ViewBag.SearchQuery"</text>
                                }
                                else if (ViewBag.SelectedCategory != null)
                {
                  <text>Sản phẩm thuộc loại: @ViewBag.SelectedCategory</text>
                }
                else
                {
                  <text>Tất cả sản phẩm</text>
                }

                </h2>
            </div>
            <div class="d-flex">
              <form asp-controller="Home" asp-action="Customer" method="get" class="ml-md-auto">
                <input type="hidden" name="query" value="@ViewBag.SearchQuery" />
                <div class="form-group mb-0">
                  <select class="form-control form-control-sm" name="sortOrder" onchange="this.form.submit()">
                    <option disabled selected>Sắp xếp theo giá</option>
                    <option value="price_asc">Giá thấp đến cao</option>
                    <option value="price_desc">Giá cao đến thấp</option>
                    <option value="price_range_0_100">Dưới 100.000đ</option>
                    <option value="price_range_100_200">Từ 100.000đ đến 200.000đ</option>
                    <option value="price_range_200_9999999">Trên 200.000đ</option>
                  </select>
                </div>
              </form>

            </div>
          </div>
        </div>

        <div class="row mb-5">
          @foreach (var item in Model)
          {
            var imageUrl = item.ImageUrls.FirstOrDefault() ?? "/images/default.png";
            <div class="col-lg-4 col-md-6 col-sm-6 item-entry mb-4">

              <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@item.Id" class="product-item d-block"
                style="background-image: url('@imageUrl');">
                <div class="product-overlay">
                  <h2 class="item-title">@item.Name</h2>
                  <strong class="item-price text-danger">@item.Price.ToString("C0", new
                                      System.Globalization.CultureInfo("vi-VN"))</strong>
              </div>
            </a>
          </div>
                    }
        </div>

        <div class="row">
          <div class="col-md-12 text-center">
            <div class="site-block-27">
              <ul>
                @if (ViewBag.CurrentPage > 1)
                {
                  <li>
                    <a asp-action="Customer" asp-route-sortOrder="@ViewBag.SortOrder"
                      asp-route-page="@(ViewBag.CurrentPage - 1)">&lt;</a>
                  </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                  if (i == ViewBag.CurrentPage)
                  {
                    <li class="active"><span>@i</span></li>
                  }
                  else
                  {
                    <li>
                      <a asp-action="Customer" asp-route-sortOrder="@ViewBag.SortOrder" asp-route-page="@i">@i</a>
                    </li>
                  }
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                  <li>
                    <a asp-action="Customer" asp-route-sortOrder="@ViewBag.SortOrder"
                      asp-route-page="@(ViewBag.CurrentPage + 1)">&gt;</a>
                  </li>
                }
              </ul>
            </div>
          </div>
        </div>

      </div>

      <div class="col-md-3 order-2 mb-5 mb-md-0">
        <div class="border p-4 rounded mb-4">
          <h3 class="mb-3 h6 text-uppercase text-black d-block">Loại sản phẩm</h3>
          <ul style="list-style-type: none; padding-left: 0; margin: 0;">
            @foreach (var cat in ViewBag.CategoryCounts)
            {
              <li class="mb-1">
                <a asp-controller="Home" asp-action="FilterByCategory" asp-route-categoryName="@cat.CategoryName"
                  class="d-flex">
                  <span>@cat.CategoryName</span>
                  <span class="text-black ml-auto">(@cat.ProductCount)</span>
                </a>
              </li>
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
