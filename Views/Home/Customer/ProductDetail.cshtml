@model moon.Models.Product

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["Title"] = "Chi tiết sản phẩm";
    var imageUrl = Model.ImageUrls?.FirstOrDefault() ?? "/images/default.png";
}

<div class="bg-light py-3">
